@model EmployerModules.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = "Forgot your password?";
    Layout = null;
}


<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">


    <title>Login Page - PAL Pensions</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body style="position: relative">

    <div class="col-md-12" style="padding: 0">
        <div class="col-md-8 hidden-xs loginImage" style="position: relative">
            <div class="img-div1" style="display: block">
                @*<img src="~/Content/images/Group27.png" />*@
                <img src="~/Content/images/Group582.png" style="width: 40%" />
                <h4> <b>Welcome to PAL Pensions</b></h4>
                <p>Your Padi of life</p>
            </div>
            <div class="img-div2">
                <img src="~/Content/images/Group1.png" style="width: 80%" />
                <h4><b>Plan Your Finances</b></h4>
                <p>We use Simple tools to plan your tommorrow</p>
            </div>

            <div class="img-div3">
                <img src="~/Content/images/Group27.png" style="width: 80%" />
                <h4><b>Save For The Future</b></h4>
                <p>Save towards goals and learn financial growth along the way until retirement</p>
            </div>
            <div class="img-div4">
                <img src="~/Content/images/Group1.png" style="width: 80%" />
                <h4><b>Save For The Future</b></h4>
                <p>Save towards goals and learn financial growth along the way until retirement</p>
            </div>
        </div>
        <div class="col-md-4 col-sm-12 login">
            <div style="background-color: white !important; padding: 35px; padding-top: 25%; height: 100%; ">
                <div class="title">
                    <img src="~/Content/images/PALLogo.png" style="width: 40%" />
                    <br />
                    <h3>Forgot Password?</h3>
                    <p>Enter Email Your email</p>
                </div>
                @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary("", new { @class = "text-danger" })


                    <div class="form-group  ">
                        <div class="col-md-12">
                            @Html.LabelFor(m => m.Email, new { @class = "control-label " })
                        </div>
                        <div class="col-md-12">
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control ", id = "email" })
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12">
                            <button type="submit" class="btn btn-primary btn-block ">Email Link</button>
                        </div>
                    </div>

                }

            </div>
        </div>
    </div>


    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }

</body>

</html>

