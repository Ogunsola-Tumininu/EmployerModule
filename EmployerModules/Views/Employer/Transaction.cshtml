@model IEnumerable<EmployerModules.DAL.SCHEDULE>

@{
    ViewBag.Title = "Transaction";
}

<div class="welcome">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="content">
                    <h2>Transactions History</h2>
                    @*<p>@Model.EmployerName  <small>@Model.Recno</small></p>*@
                </div>
            </div>
        </div>
    </div>
</div>

<div class="welcome">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="content table-div">
                    <table class="table table-hover" id="table_id">
                        <thead>
                            <tr>
                                <th>
                                        EMPLOYER NAME
                                </th>
                                <th>
                                    @*@Html.DisplayNameFor(model => model.IDNO)*@
                                    SCHEDULE ID
                                </th>

                                <th>
                                    @*@Html.DisplayNameFor(model => model.TRANS_DATE)*@
                                    PERIOD
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.AMOUNT)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.FUND_ID)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.DESCRIPTION)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.COMMENT)
                                </th>
                                <th>Action</th>
                            </tr>
                        </thead>

                        <tbody>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                         @ViewBag.EmployerName  
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.IDNO)
                                       
                                    </td>
                                    <td>

                                        @Html.DisplayFor(modelItem => item.TRANS_DATE)
                                    </td>
                                    <td>
                                        &#8358;@Html.DisplayFor(modelItem => item.AMOUNT_PROCESSED )
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.FUND_ID)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DESCRIPTION)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.COMMENT)
                                    </td>
                                    <td>
                                        <a href="@Url.Action("PrintTransactionInvoice", "Employer", new { transactionId = item.IDNO})" class="text-success">
                                            Print Invoice
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


<link href="https://cdn.datatables.net/1.10.20/css/jquery.dataTables.min.css" rel="stylesheet" />
@section Scripts{
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.js"></script>
    <script>
        $(document).ready(function () {
            $('#table_id').DataTable({
                
                "ordering": false
            });
        });
    </script>
}


