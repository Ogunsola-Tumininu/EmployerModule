@model EmployerModules.DAL.SCHEDULE

@{
    Layout = null;
}

<!DOCTYPE html>

<html>

<head>
    <meta name="viewport" content="width=device-width" />
    <title>ScheduleInvoice</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div style="padding-top: 40px" class="pull-right col-md-3">
                <img style="width: 150px" src="~/Content/images/PALLogo.png" /><br /><br />
                <p>Plot 289<br /> Ajose Adeogun Street <br /> Victoria Island<br /> Lagos.</p>
                <br />
            </div>
            <table class="table table-striped table-bordered">

                <tbody>
                    <tr>
                        <th>Employer Name</th>
                        <td>@ViewBag.EmployerName</td>
                    </tr>
                    <tr>
                        <th>PFA</th>
                        <td>Pensions Alliance Limited</td>
                    </tr>
                    <tr>
                        <th>PFA Code</th>
                        <td>25</td>
                    </tr>
                    <tr>
                        <th>Schedule Id</th>
                        <td>@Html.DisplayFor(model => model.IDNO)</td>
                    </tr>
                    <tr>
                        <th>Period</th>
                        <td>@String.Format("{0: MMMM yyyy}", Model.TRANS_DATE)</td>
                    </tr>
                    <tr>
                        <th>Amount Processed</th>
                        <td>&#8358;@Html.DisplayFor(model => model.AMOUNT_PROCESSED )</td>
                    </tr>
                    <tr>
                        <th>Payment Date</th>
                        <td>&#8358;@Html.DisplayFor(model => model.BOOKING_DATE )</td>
                    </tr>

                </tbody>
            </table>
        </div>
    </div>
</body>
</html>
